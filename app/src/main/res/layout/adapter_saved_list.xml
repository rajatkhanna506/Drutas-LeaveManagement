<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAplliedLeave"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewsbackground"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvLeaveHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteColor" />

    <TextView
        android:id="@+id/tvNotifyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="@color/whiteColor" />

    <com.example.drutas.Views.components.NonScrollListView
        android:id="@+id/lvNonScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/whiteColor" />

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason :"
        android:textColor="@color/whiteColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:layout_marginRight="30dp"
            android:padding="15dp">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"
            android:padding="15dp"/>
    </LinearLayout>

</LinearLayout>
